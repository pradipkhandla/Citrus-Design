<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_other" />

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/_13sdp"
                android:layout_marginRight="@dimen/_13sdp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_165sdp"
                        android:layout_gravity="bottom"
                        android:layout_marginTop="@dimen/_23sdp"
                        android:background="@drawable/round_bacround"/>


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/marineinsurance"
                        android:adjustViewBounds="true"/>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_22sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:text="What is covered?"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15ssp"
                        android:textStyle="bold" />


                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:listitem="@layout/marine_insurance_item"
                        tools:itemCount="1"
                        android:layout_marginTop="@dimen/_12sdp"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_22sdp"
                    android:layout_marginEnd="@dimen/_14sdp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:text="Insurer"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15ssp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="@dimen/_117sdp"
                        android:layout_height="@dimen/_28sdp"
                        android:src="@drawable/bajaj"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:adjustViewBounds="true"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_22sdp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:text="Calculate Premium"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15ssp"
                        android:textStyle="bold" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Destination Country"
                        android:textColor="@color/new_green"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold"
                        android:fontFamily="@font/roboto"
                        android:layout_marginTop="@dimen/_12sdp"/>

                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="eg. Dubai"
                        android:textSize="@dimen/_12ssp"
                        android:backgroundTint="@color/new_green"
                        android:paddingBottom="@dimen/_10sdp"
                        android:fontFamily="@font/roboto"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Commodity"
                        android:textColor="@color/new_green"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold"
                        android:fontFamily="@font/roboto"
                        android:layout_marginTop="@dimen/_12sdp"/>

                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="eg. Onion"
                        android:textSize="@dimen/_12ssp"
                        android:backgroundTint="@color/normal_text"
                        android:paddingBottom="@dimen/_10sdp"
                        android:fontFamily="@font/roboto"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Invoice Cost"
                        android:textColor="@color/new_green"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold"
                        android:fontFamily="@font/roboto"
                        android:layout_marginTop="@dimen/_12sdp"/>

                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="eg. $14,440"
                        android:textSize="@dimen/_12ssp"
                        android:backgroundTint="@color/normal_text"
                        android:paddingBottom="@dimen/_10sdp"/>

                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_bacround"
                    android:layout_marginTop="@dimen/_21sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:gravity="center_horizontal"
                        android:paddingVertical="@dimen/_12sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Premium"
                            android:textColor="@color/new_green"
                            android:textSize="@dimen/_13ssp"
                            android:textStyle="bold"
                            android:fontFamily="@font/roboto"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto"
                            android:text="â‚¹14,440"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_15ssp"
                            android:layout_marginTop="@dimen/_7sdp"
                            android:textStyle="bold"
                            />

                    </LinearLayout>

                </FrameLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_10ssp"
                    android:text="Calculate"
                    android:paddingVertical="@dimen/_10sdp"
                    android:textColor="@color/new_green"
                    android:fontFamily="@font/roboto"
                    android:background="@drawable/round_green_board"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:textStyle="bold"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_22sdp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:text="How to buy insurance"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15ssp"
                        android:textStyle="bold" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:itemCount="3"
                        tools:listitem="@layout/marine_buy_insurance"
                        android:layout_marginTop="@dimen/_20sdp"/>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>
            </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/_2sdp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="@dimen/_13sdp"
        android:layout_marginVertical="@dimen/_7sdp"
        android:background="@drawable/round_button"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:paddingVertical="@dimen/_12sdp"
        android:text="REQUEST PROPOSAL"
        android:textColor="@color/white"
        android:textSize="@dimen/_13ssp" />

    </androidx.cardview.widget.CardView>

</LinearLayout>