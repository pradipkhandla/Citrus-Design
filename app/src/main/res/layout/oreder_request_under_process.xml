<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <include layout="@layout/toolbar_other" />


    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/_7sdp">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_13sdp"
                android:layout_marginRight="@dimen/_13sdp"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_68sdp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@drawable/round_transprent_bacround">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:src="@drawable/righttick" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/roboto"
                            android:text="Request raised"
                            android:textColor="@color/normal_green"
                            android:textSize="@dimen/_13ssp"
                            android:textStyle="bold"
                            android:layout_marginStart="@dimen/_2sdp"/>
                    </LinearLayout>

                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_22sdp">

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="You will receive mail from our service executive"
                            android:fontFamily="@font/roboto"
                            android:textSize="@dimen/_13ssp"
                            android:textColor="@color/black"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kindly reply to the mail with following \n documents"
                            android:layout_marginTop="@dimen/_11sdp"
                            android:fontFamily="@font/roboto"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_11ssp"/>

                    </LinearLayout>

                    <ImageView
                        android:layout_weight="2"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_78sdp"
                        android:src="@drawable/mail"/>


                </LinearLayout>

                 <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/document_items"
                    tools:itemCount="1"
                     android:layout_marginTop="@dimen/_15sdp"/>



                    <LinearLayout
                        android:layout_width="@dimen/_275sdp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="@dimen/_11sdp"
                        android:gravity="center_horizontal"
                        android:background="@drawable/round_yellow_background"
                        android:layout_marginTop="@dimen/_27sdp">

                        <ImageView
                            android:layout_width="@dimen/_18sdp"
                            android:layout_height="@dimen/_18sdp"
                            android:src="@drawable/pin"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="All Documents should be signed and stamped"
                            android:textSize="@dimen/_10ssp"
                            android:layout_marginStart="@dimen/_7sdp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/roboto"
                            android:layout_gravity="center_vertical"/>

                    </LinearLayout>



                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_23sdp"
                    android:background="@drawable/round_bacround">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_13sdp">

                        
                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/_54sdp"
                            android:layout_height="@dimen/_54sdp"
                            app:cardCornerRadius="@dimen/_100sdp">
                        <ImageView
                            android:layout_width="@dimen/_54sdp"
                            android:layout_height="@dimen/_54sdp"
                            android:layout_gravity="end"
                            android:src="@drawable/man" />
                        </androidx.cardview.widget.CardView>


                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="@dimen/_11sdp"
                            android:layout_marginBottom="@dimen/_11sdp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto"
                                android:text="Need Help?"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_11ssp"
                                android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Talk to our expert"
                            android:fontFamily="@font/roboto"
                            android:textSize="@dimen/_11ssp"
                            android:textColor="@color/black"
                            android:layout_marginTop="@dimen/_3sdp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto"
                                android:text="Faisal Shaik"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_13ssp"
                                android:textStyle="bold"
                                android:layout_marginTop="@dimen/_11sdp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/contact"
                                android:fontFamily="@font/roboto"
                                android:textSize="@dimen/_10ssp"
                                android:textColor="@color/black"
                                android:layout_marginTop="@dimen/_5sdp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/email"
                                android:fontFamily="@font/roboto"
                                android:textSize="@dimen/_10ssp"
                                android:textColor="@color/black"
                                android:layout_marginTop="@dimen/_5sdp"/>

                        </LinearLayout>

                    </LinearLayout>


                </FrameLayout>


            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="@dimen/_275sdp"
        android:layout_height="@dimen/_38sdp"
        android:background="@drawable/round_button"
        android:text="OK"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/_7sdp"/>

</LinearLayout>